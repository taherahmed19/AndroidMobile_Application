<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markerModal"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="#FFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/modal_bottom_border"
                android:padding="10sp">

                <ImageButton
                    android:id="@+id/modalCloseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_routing_search_close"></ImageButton>

                <Button
                    android:id="@+id/markerDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Delete"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    android:background="@color/transparent"
                    android:visibility="invisible">

                </Button>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:alpha="1"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/modal_name_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_modal_user">
                        </ImageView>

                        <TextView
                            android:id="@+id/marker_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Name Name"
                            android:textColor="#8C8C8C"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/markerImage"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_marginBottom="10sp"
                        android:scaleType="fitXY" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/mediaViewPager"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10sp"
                        android:scaleType="fitXY">
                    </androidx.viewpager.widget.ViewPager>

                    <TextView
                        android:id="@+id/modalCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="Environment"
                        android:textColor="#000"
                        android:textSize="23sp" />


                    <TextView
                        android:id="@+id/modalDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices.
You can now view this by returning to the Feed. Other users will also be able to view this data on their devices."
                        android:textSize="16sp"
                        android:layout_marginBottom="10sp"/>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:padding="10sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/modal_top_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/upVoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_upvote_arrow"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginRight="10sp">
            </ImageButton>

            <TextView
                android:id="@+id/markerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/downVoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_downvote_arrow"
                android:background="@android:color/transparent"
                android:layout_marginRight="10sp"
                android:layout_marginTop="1sp"
                >
            </ImageButton>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>