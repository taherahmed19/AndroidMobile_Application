<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markerModal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="#FFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/modal_bottom_border"
                android:padding="10sp">

                <ImageButton
                    android:id="@+id/radiusMarkerCloseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_routing_search_close">

                </ImageButton>

                <Button
                    android:id="@+id/markerDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Save"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:background="@color/transparent">

                </Button>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:alpha="1"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <SeekBar
                        android:id="@+id/radiusMarkerSeekBar"
                        android:max="100"
                        android:progress="50"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"/>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>